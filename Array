//Reverse an array//
#include <iostream>

using namespace std;

int reverseArray(int arr[] , int n){
    
    int arr2[n];
    for(int i = 0;i<n;i++){
        arr2[n -(i+1)] = arr[i];
    }
    
    for(int i = 0;i<n;i++){
        arr[i] = arr2[i];
    }
    
    return 0;
    
    
}

int main()
{
    int n ; 
    cout<<"Size of array"<<endl;
    cin>>n;
    int arr[n];
    
    cout<<"Elements of array"<<endl;
    for(int i = 0 ; i<n;i++){
        cin>>arr[i];
    }
    
    reverseArray(arr,n);
    
    cout<<"Reversed array"<<endl;
    
    for(int i =0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    

    return 0;
}

//Sort an array//

#include <iostream>

using namespace std;

void insertionSort(int array[], int n) {
  for (int i = 1; i < n; i++) {
    int k = array[i];
    int j = i - 1;
    while (k < array[j] && j >= 0) {
      array[j + 1] = array[j];
      --j;
    }
    array[j + 1] = k;
  }
}

int main()
{
    int n ; 
    cout<<"Size of array"<<endl;
    cin>>n;
    int arr[n];
    
    cout<<"Elements of array"<<endl;
    for(int i = 0 ; i<n;i++){
        cin>>arr[i];
    }
    
    insertionSort(arr,n);
    
    cout<<"\nSorted array"<<endl;
    
    for(int i =0;i<n;i++){
        cout<<arr[i]<<" ";
    }

    return 0;
}

//find frequency of maximum occurred element//

#include <iostream>

using namespace std;

void insertionSort(int array[], int n) {
  for (int i = 1; i < n; i++) {
    int k = array[i];
    int j = i - 1;
    while (k < array[j] && j >= 0) {
      array[j + 1] = array[j];
      --j;
    }
    array[j + 1] = k;
  }
}

void frequency(int arr[], int n)
{
    insertionSort(arr,n);
  
    int max = 1, r = arr[0], count = 1;
    for (int i = 1; i < n; i++) {
        if (arr[i] == arr[i - 1])
            count++;
        else
            count = 1;
        
        if (count > max) {
            max = count;
            r = arr[i - 1];
        }
    }
  
    cout<<"element : "<<r<<endl;
    cout<<"frequency : "<<max;
}

int main()
{
    int n ; 
    cout<<"Size of array"<<endl;
    cin>>n;
    int arr[n];
    
    cout<<"Elements of array"<<endl;
    for(int i = 0 ; i<n;i++){
        cin>>arr[i];
    }
    
    frequency(arr,n);
    
    return 0;
}
